<% content_for(:title, 'Couple Login')%>

<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-md-12 tp-title-center">
        <h1> Welcome to Arusifiti - Please Log in.</h1>
        <p>We're happy to have you with us.</p>
      </div>
    </div>
    <div class="col-md-offset-3 col-md-6 st-tabs">
      <div class="well-box">
        <h3>Please Log in here:</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, class: 'form-control input-md', placeholder: 'Username or email' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control input-md', placeholder: 'Password' %>
  </div>

  <div class="pull-right">
   <small><%= link_to "Forgot your password?", new_password_path(resource_name) %></small>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="">
    <%= f.submit "Log in", id: 'submit', class: 'btn tp-btn-default' %>
  </div>
<% end %>

  </div>
      <div class="well-box">
          <span class="signup-vendor">Don't have an account </span>
        <span class="signup-couple">
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </span>
      </div>
    </div>
  </div>
</div>
